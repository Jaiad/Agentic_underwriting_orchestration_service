# ===========================================
# INSURANCE UNDERWRITING AI - CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values:
#   macOS/Linux: cp .env.example .env
#   Windows: copy .env.example .env

# -------------------------------------------
# STEP 1: Get Fireworks API Key
# -------------------------------------------
# 1. Go to https://fireworks.ai
# 2. Sign up for free (includes $1 credit)
# 3. Navigate to API Keys section
# 4. Click "Create new key"
# 5. Copy the key and paste below
FIREWORKS_API_KEY=API_KEY

# -------------------------------------------
# STEP 2: Get MongoDB Connection String
# -------------------------------------------
# OPTION A: MongoDB Atlas (Recommended - Free Tier)
#   1. Go to https://www.mongodb.com/cloud/atlas
#   2. Sign up for free
#   3. Create a new cluster (M0 Free Tier)
#   4. Click "Database Access" -> Add new database user
#   5. Click "Network Access" -> Add IP Address -> Allow from anywhere (0.0.0.0/0)
#   6. Click "Connect" -> "Drivers" -> Copy connection string
#   7. Replace <password> with your database user's password
#
# OPTION B: Local MongoDB with Docker
#   1. Run: docker-compose up -d mongodb
#   2. Use: mongodb://localhost:27017
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# -------------------------------------------
# Database Configuration
# -------------------------------------------
MONGODB_DATABASE=insurance_underwriting

# -------------------------------------------
# AI Model Configuration
# -------------------------------------------
# LLM for text generation and reasoning
FIREWORKS_LLM_MODEL=accounts/fireworks/models/llama-v3p3-70b-instruct

# Embedding model for vector search
FIREWORKS_EMBEDDING_MODEL=nomic-ai/nomic-embed-text-v1.5

# -------------------------------------------
# API Server Configuration
# -------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# -------------------------------------------
# Optional: Logging Level
# -------------------------------------------
LOG_LEVEL=INFO

# -------------------------------------------
# SSL Configuration (Corporate Networks)
# -------------------------------------------
# Set to False if you're behind a corporate proxy/firewall
# that intercepts SSL traffic (causes CERTIFICATE_VERIFY_FAILED errors)
# WARNING: Only disable in trusted corporate environments
SSL_VERIFY=True
